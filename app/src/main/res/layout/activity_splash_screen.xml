<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_linear"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="214dp"
        android:layout_height="85dp"
        android:layout_marginTop="228dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dflogonew" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="45dp"
        android:layout_height="71dp"
        android:layout_marginStart="396dp"
        android:layout_marginBottom="36dp"
        android:alpha="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/universitycollegedublinlogo" />

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/hooklogo" />

    <ImageView
        android:id="@+id/logo4"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:layout_marginEnd="356dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/anceastlogo" />
</androidx.constraintlayout.widget.ConstraintLayout>